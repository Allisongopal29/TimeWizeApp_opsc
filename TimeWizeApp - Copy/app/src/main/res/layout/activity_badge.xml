<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".BadgesActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="View Rewards"
        android:textSize="29sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#009688"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img.png1"
            android:layout_width="159dp"
            android:layout_height="145dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp"
            android:contentDescription="@null"
            android:src="@drawable/badgeone" />

        <ProgressBar
            android:id="@+id/progressBarLine1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="110dp"
            android:layout_height="6dp"
            android:layout_marginLeft="250dp"
            android:max="100"
            android:progress="60"
            android:progressBackgroundTint="@color/lightBlue"
            android:progressTint="@color/black"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/img.png"
            android:layout_width="159dp"
            android:layout_height="145dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@null"
            android:src="@drawable/badgetwo" />

        <ProgressBar
            android:id="@+id/progressBarLine"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="110dp"
            android:layout_height="6dp"
            android:layout_marginLeft="250dp"
            android:max="100"
            android:progress="20"
            android:progressBackgroundTint="@color/lightBlue"
            android:progressTint="@color/black"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/img.png2"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@null"
            android:src="@drawable/badgethree" />

        <ProgressBar
            android:id="@+id/progressBarLine2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="110dp"
            android:layout_height="6dp"
            android:layout_marginLeft="250dp"
            android:max="100"
            android:progress="90"
            android:progressBackgroundTint="@color/lightBlue"
            android:progressTint="@color/black"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/img.png3"
            android:layout_width="160dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-435dp"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="200dp"
            android:contentDescription="@null"
            android:src="@drawable/badgefour" />

        <ProgressBar
            android:id="@+id/progressBarLine3"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="110dp"
            android:layout_height="6dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="-200dp"
            android:layout_marginRight="50dp"
            android:max="100"
            android:progress="65"
            android:progressBackgroundTint="@color/lightBlue"
            android:progressTint="@color/black"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/img.png4"
            android:layout_width="160dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="200dp"
            android:contentDescription="@null"
            android:src="@drawable/badgefive" />

        <ProgressBar
            android:id="@+id/progressBarLine4"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="110dp"
            android:layout_height="6dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="-200dp"
            android:layout_marginRight="50dp"
            android:max="100"
            android:progress="65"
            android:progressBackgroundTint="@color/lightBlue"
            android:progressTint="@color/black"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/img.png5"
            android:layout_width="160dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="200dp"
            android:contentDescription="@null"
            android:src="@drawable/badgesix" />

        <ProgressBar
            android:id="@+id/progressBarLine5"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="110dp"
            android:layout_height="6dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="-200dp"
            android:layout_marginRight="50dp"
            android:max="100"
            android:progress="50"
            android:progressBackgroundTint="@color/lightBlue"
            android:progressTint="@color/black"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/img.png6"
            android:layout_width="160dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="200dp"
            android:contentDescription="@null"
            android:src="@drawable/badgeseven" />

        <ProgressBar
            android:id="@+id/progressBarLine6"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="110dp"
            android:layout_height="6dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="-200dp"
            android:layout_marginRight="50dp"
            android:max="100"
            android:progress="57"
            android:progressBackgroundTint="@color/lightBlue"
            android:progressTint="@color/black"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/img.png7"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="-130dp"
            android:contentDescription="@null"
            android:src="@drawable/badgeeight" />


        <ProgressBar
            android:id="@+id/progressBarLine7"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="110dp"
            android:layout_height="6dp"
            android:layout_marginLeft="250dp"
            android:max="100"
            android:progress="90"
            android:progressBackgroundTint="@color/lightBlue"
            android:progressTint="@color/black"
            android:visibility="visible" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>